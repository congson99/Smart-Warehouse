        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/environment_acti_ralative_for_card"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/environment_btn_save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/change_product_button_save"
            android:text="Save to History"
            android:textAllCaps="false"
            android:textSize="19sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/environment_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text=""
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:orientation="vertical"/>

